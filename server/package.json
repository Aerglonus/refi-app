{
  "name": "refi-client",
  "productName": "Refi client",
  "version": "1.0.0",
  "description": "A tool to make developer less pain when developing application with Firestore indeed they will save move time to focus on building application instead of playing with poor DX product",
  "main": "dist/index.js",
  "scripts": {
    "watch": "tsc -w",
    "dev": "run-p watch start",
    "start": "electron-forge start",
    "package": "rm -rf build && cp -r ../vite/dist ./build && npm run build && electron-forge package",
    "make": "electron-forge make",
    "build": "tsc --sourceMap false",
    "publish": "electron-forge publish",
    "lint": "eslint --ext .ts ."
  },
  "keywords": [],
  "author": {
    "name": "Thanh Le",
    "email": "mihthanh27@gmail.com"
  },
  "license": "MIT",
  "config": {
    "forge": {
      "packagerConfig": {},
      "makers": [
        {
          "name": "@electron-forge/maker-squirrel",
          "config": {
            "name": "my_new_app"
          }
        },
        {
          "name": "@electron-forge/maker-zip",
          "platforms": [
            "darwin"
          ]
        },
        {
          "name": "@electron-forge/maker-deb",
          "config": {}
        },
        {
          "name": "@electron-forge/maker-rpm",
          "config": {}
        }
      ]
    }
  },
  "devDependencies": {
    "@electron-forge/cli": "^6.0.0-beta.54",
    "@electron-forge/maker-deb": "^6.0.0-beta.54",
    "@electron-forge/maker-rpm": "^6.0.0-beta.54",
    "@electron-forge/maker-squirrel": "^6.0.0-beta.54",
    "@electron-forge/maker-zip": "^6.0.0-beta.54",
    "@types/electron-devtools-installer": "^2.2.0",
    "@types/uuid": "^8.3.0",
    "@typescript-eslint/eslint-plugin": "^2.18.0",
    "@typescript-eslint/parser": "^2.18.0",
    "electron": "12",
    "electron-devtools-installer": "^3.1.1",
    "eslint": "^7.6.0",
    "eslint-plugin-import": "^2.20.0",
    "npm-run-all": "^4.1.5",
    "source-map-support": "^0.5.19",
    "typescript": "^4.0.2"
  },
  "dependencies": {
    "@types/lowdb": "^1.0.9",
    "electron-is-dev": "^1.2.0",
    "electron-serve": "^1.1.0",
    "electron-squirrel-startup": "^1.0.0",
    "firebase-admin": "^9.5.0",
    "firestore-serializers": "file:../firestore-serializers",
    "lodash": "^4.17.21",
    "lowdb": "^1.0.0",
    "node-ipc": "^9.1.3",
    "open": "^8.0.1",
    "secure-electron-context-menu": "^1.2.2",
    "uuid": "^8.3.2"
  }
}
